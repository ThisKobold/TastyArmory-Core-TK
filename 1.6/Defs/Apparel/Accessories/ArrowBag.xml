<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!--Quiver-->
	<ThingDef ParentName="TA_ApparelCarryGearBase"  MayRequireAnyOf="al9000.highmedieval,al9000.shiningarmor">
		<defName>TA_ArrowBag</defName>
		<label>arrow bag</label>
		<description>A light fabric pouch for holding arrows on your person.</description>
		<graphicData>
			<texPath>Apparel/Accessories/TA_ArrowBag/TA_ArrowBag_ico</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<recipeMaker>
			<recipeUsers>
				<li>CraftingSpot</li>
				<li>HandTailoringBench</li>
				<li>ElectricTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<WorkToMake>5000</WorkToMake>
			<Mass>0.7</Mass>
			<Bulk MayRequire="CETeam.CombatExtended">5</Bulk>
			<WornBulk MayRequire="CETeam.CombatExtended">0</WornBulk>
			<EquipDelay>3.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<CarryBulk MayRequire="CETeam.CombatExtended">15</CarryBulk>
			<CarryingCapacity>15</CarryingCapacity>
		</equippedStatOffsets>
		<costStuffCount>30</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<apparel>
			<drawData>
				<defaultData>
					<layer>28</layer>
				</defaultData>
				<dataSouth>
					<layer>0</layer>
				</dataSouth>
			</drawData>
			<careIfWornByCorpse>false</careIfWornByCorpse>
			<wornGraphicPath>Apparel/Accessories/TA_ArrowBag/TA_ArrowBag</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<tags>
				<li>Neolithic</li>
				<li>MedievalMilitary</li>
				<li>MedievalArmorDecent</li>
				<li MayRequire="Ludeon.RimWorld.Royalty">Royal</li>
				<li MayRequire="Ludeon.RimWorld.Royalty">RoyalTier2</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>

</Defs>
