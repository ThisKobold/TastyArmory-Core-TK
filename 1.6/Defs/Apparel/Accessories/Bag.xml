<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- ==================== Bag ==================== -->
  <ThingDef ParentName="TA_ApparelCarryGearBase" MayRequire="CETeam.CombatExtended">
    <defName>TA_Bag</defName>
    <label>bag</label>
    <description>A shoulder sling pouch attached to a long strap. Made to carry heavier gear than other options, it lacks the flexibility or bulk that other bags afford.</description>
    <graphicData>
      <texPath>Apparel/Accessories/TA_Bag/TA_Bag_ico</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>5000</WorkToMake>
      <Mass>0.8</Mass>
      <Bulk MayRequire="CETeam.CombatExtended">2</Bulk>
      <EquipDelay>1</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <CarryBulk MayRequire="CETeam.CombatExtended">18</CarryBulk>
			<CarryingCapacity>18</CarryingCapacity>
    </equippedStatOffsets>
    <costStuffCount>30</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
      <li>Fabric</li>
    </stuffCategories>
    <apparel>
      <drawData>
        <defaultData>
          <layer>28</layer>
        </defaultData>
      </drawData>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <wornGraphicPath>Apparel/Accessories/TA_Bag/TA_Bag</wornGraphicPath>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <tags>
        <li>Medieval</li>
        <li>MedievalMilitary</li>
        <li MayRequire="Ludeon.RimWorld.Royalty">Royal</li>
        <li MayRequire="Ludeon.RimWorld.Royalty">RoyalTier2</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

</Defs>
